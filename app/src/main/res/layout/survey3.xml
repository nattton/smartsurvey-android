                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio3_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    android:text="ได้รับ" />

                <RadioButton
                    android:id="@+id/radio3_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:text="ไม่ได้รับ" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1 เดือน\n• ฉีดวัคซีนป้องกันตับอักเสบบี (เฉพาะรายที่เด็กคลอดจากมารดาที่เป็นพาหะของไวรัสตับอักเสบบี)"
                android:textColor="@color/colorPrimary" />

            <RadioGroup
                android:id="@+id/radioGroup3_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio3_2_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    android:text="ได้รับ" />

                <RadioButton
                    android:id="@+id/radio3_2_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="1"
                    android:text="ไม่ได้รับ" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/rounded_corner"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-2 เดือน\n• ฉีดวัคซีนรวมป้องกันคอตีบ ไอกรน บาดทะยัก ตับอักเสบบี โรคโปลิโอ ครั้งที่ 1"
                android:textColor="@color/colorPrimary" />

            <RadioGroup
                android:id="@+id/radioGroup3_3"
