<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordergroup"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="24. ทุกคนในครัวเรือนนี้ ดื่มสุรา หรือไม่"
            android:textColor="@color/colorPrimary" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่ดื่มสุราทุกคน" />

            <RadioButton
                android:id="@+id/radio1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ดื่มสุรา\n- ต่ำกว่า 15 ปี....คน\n- 15-19 ปี ....คน\n- 20 ปีขึ้นไป ....คน" />

            <RadioButton
                android:id="@+id/radio1_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ดหากผู้ที่ดื่มสุราเป็นผู้ที่หารายได้หลักให้กับครัวเรือน ดื่มสุราเฉลี่ยเดือนละ………ครั้ง" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>