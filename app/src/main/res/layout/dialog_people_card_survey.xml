<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBorder">

    <TextView
        android:id="@+id/txtDialogVies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/thsarabun_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:text="นำไปใช้อะไรบ้าง" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordernocomplete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="left"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_gravity="left"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/thsarabun_bold"
                    android:textSize="20dp"
                    android:text="ซื้อสินค้าอุปโภค-บริโภค" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thsarabun_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="ลดค่าซื้อก๊าซหุงต้ม" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thsarabun_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="ค่าโดยสารรถสาธารณะ" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thsarabun_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="แลกเป็นสิ่งของ" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thsarabun_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="แลกเป็นเงินสด" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/thsarabun_bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:text="กดเงินสด (โปรดระบุ)" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="left"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/checkBox7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textSize="20dp"
                        android:text="อื่น ๆ" />

                    <EditText
                        android:id="@+id/txtOwnerShip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_gravity="top"
                        android:background="@drawable/fieldinput"
                        android:fontFamily="@font/thsarabun_bold"
                        android:hint="ระบุการนำไปใช้อื่น"
                        android:padding="20dp"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="บันทึก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="ออก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

