<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Header"
            android:textColor="@color/colorPrimary" />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="21.1 ครัวเรือนนี้ มีคนอายุ 60 ปีขึ้นไป หรือไม่ (ไม่นับรวมคนพิการที่ไม่สามารถช่วยตัวเองได้)"
            android:textColor="@color/colorPrimary" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มี.....คน" />

            <RadioButton
                android:id="@+id/radio1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่มี (ข้ามไปข้อ 22)" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.2 คนอายุ 60 ปีขึ้นไป มีอาชีพและมีรายได้ ทุกคน หรือไม่"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/checkbox2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ทุกคน" />

        <CheckBox
            android:id="@+id/checkbox2_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไม่มีอาชีพและไม่มีรายได้.....คน" />
        <CheckBox
            android:id="@+id/checkbox2_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไม่มีอาชีพแต่มีรายได้....คน" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.3 คนอายุ 60 ปีขึ้นไปที่มีอาชีพและมีรายได้จากการผลิตสินค้า OTOP กี่คน"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.4 คนอายุ 60 ปีขึ้นไป ที่ไม่มีอาชีพ ตามข้อ 21.2 มีความสมัครใจที่จะประกอบอาชีพ กี่คน"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editText4_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editText4_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:padding="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21.5 คนอายุ 60 ปีขึ้นไปที่ไม่มีอาชีพและไม่มีรายได้ มีความสนใจผลิตสินค้า OTOP กี่คน"
            android:textColor="@color/colorPrimary" />

        <EditText
            android:id="@+id/editText5_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/editText5_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>