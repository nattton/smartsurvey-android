<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBorder">

    <TextView
        android:id="@+id/txtDialogVies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/thsarabun_bold"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp"
        android:text="ข้อมูลสมาชิก" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordernocomplete">

        <TextView
            android:id="@+id/txtDialogVies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/thsarabun_bold"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:text="จะต้องเป็นข้อมูลสมาชิกที่อาศัยอยู่จริงในปัจจุบัน" />


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtHomeNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="คำนำหน้าชื่อ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ชื่อ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtSoi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="นามสกุล"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtProvince"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="เพศ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txtCardID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@drawable/fieldinput"
                        android:hint="รหัสบัตรประชาชน"
                        android:maxLength="13"
                        android:digits="0123456789"
                        android:inputType="phone"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:textSize="20dp"
                    android:hint="วัน/เดือน/ปีเกิด"
                    android:padding="20dp" />

                <TextView
                    android:id="@+id/txtAmphur"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="อายุ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtTumbon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="อาชีพหลัก / อยู่ระหว่างศึกษา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtMoo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="การศึกษา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ศาสนา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtCommunity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ความเกี่ยวข้องกับหัวหน้าครัวเรือน"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDialogVies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="สถานะภาพทางร่างกาย" />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ปกติ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="พิการ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ผู้ป่วยเรื้อรัง"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDialogVies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="ช่วยเหลือตนเอง" />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ได้"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ไม่ได้"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDialogVies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="เป็นผู้ให้ข้อมูล" />

                    <RadioButton
                        android:id="@+id/radioButton1"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="เป็นผู้ให้ข้อมูล"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ไม่เป็นผู้ให้ข้อมูล"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDialogVies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:text="บัตรสวัสดิการแห่งรัฐ" />

                    <RadioButton
                        android:id="@+id/rdPeopleUse"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="มี"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rdPeopleNotUse"
                        android:layout_width="202dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ไม่มี"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="35dp"
            android:layout_gravity="center"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="บันทึก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="ออก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

