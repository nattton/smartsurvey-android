<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBorder"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/thsarabun_bold"
        android:text="ข้อมูลสมาชิก"
        android:textColor="@color/colorPrimary"
        android:textSize="30dp" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordernocomplete">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/thsarabun_bold"
            android:text="จะต้องเป็นข้อมูลสมาชิกที่อาศัยอยู่จริงในปัจจุบัน"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="40dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPrefix"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="คำนำหน้าชื่อ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ชื่อ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <EditText
                    android:id="@+id/txtSurname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="นามสกุล"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="เพศ"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/txtCardID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@drawable/fieldinput"
                        android:digits="0123456789"
                        android:fontFamily="@font/thsarabun_bold"
                        android:hint="รหัสบัตรประชาชน"
                        android:inputType="phone"
                        android:maxLength="13"
                        android:padding="20dp"
                        android:singleLine="true"
                        android:textSize="20dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/txtBirthDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="วัน/เดือน/ปีเกิด"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtJob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="อาชีพหลัก / อยู่ระหว่างศึกษา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtEducation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="การศึกษา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtReligion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ศาสนา"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/txtRelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:background="@drawable/fieldinput"
                    android:fontFamily="@font/thsarabun_bold"
                    android:hint="ความเกี่ยวข้องกับหัวหน้าครัวเรือน"
                    android:padding="20dp"
                    android:textSize="20dp" />

                <RadioGroup
                    android:id="@+id/radioGroupHealth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtHealth"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="สถานะภาพทางร่างกาย"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonHealth1"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ปกติ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonHealth2"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="พิการ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonHealth3"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ผู้ป่วยเรื้อรัง"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />
                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroupAbility"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtAbility"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ช่วยเหลือตนเอง"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonAbility1"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ได้"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonAbility2"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ไม่ได้"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroupInformant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtInformant"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="เป็นผู้ให้ข้อมูล"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonInformant1"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:tag="1"
                        android:text="เป็นผู้ให้ข้อมูล"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/radioButtonInformant2"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:tag="2"
                        android:text="ไม่เป็นผู้ให้ข้อมูล"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtDialogVies"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="บัตรสวัสดิการแห่งรัฐ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rdPeopleUse"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="มี"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                    <RadioButton
                        android:id="@+id/rdPeopleNotUse"
                        android:layout_width="202dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="05dp"
                        android:fontFamily="@font/thsarabun_bold"
                        android:text="ไม่มี"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp" />

                </RadioGroup>

            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="บันทึก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_menubutton"
                android:fontFamily="@font/thsarabun_bold"
                android:text="ออก"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>

