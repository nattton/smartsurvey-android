    <LinearLayout
        android:id="@+id/question3_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22.3.2 ครัวเรือนได้รับเงินกู้อย่างเพียงพอ หรือไม่"
            android:textColor="@color/colorPrimary" />
        <RadioGroup
            android:id="@+id/radioGroup3_2_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio3_2_1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="เพียงพอ" />

            <RadioButton
                android:id="@+id/radio3_2_1_2"
