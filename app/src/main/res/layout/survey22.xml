            <RadioButton
                android:id="@+id/radio4_2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มี.......คน .......บาท" />
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3) ครัวเรือนนี้ มีหนี้นอกระบบ"
            android:textColor="@color/colorPrimary" />
        <RadioGroup
            android:id="@+id/radioGroup4_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio4_3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่มี" />

            <RadioButton
                android:id="@+id/radio4_3_2"
