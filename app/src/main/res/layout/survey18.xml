<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordergroup"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="18.1 ครัวเรือนนี้ มีคนในครัวเรือนที่จบการศึกษาภาคบังคับ 9 ปี ที่ไม่ได้ เรียนต่อชั้น ม.4 หรือเทียบเท่า และ ยังไม่มีงานทำ หรือไม่"
            android:textColor="@color/colorPrimary" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="มี....คน" />

            <RadioButton
                android:id="@+id/radio1_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่มี (ข้ามไปข้อ 19)" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordergroup"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.2 คนในครัวเรือน ตามข้อ 18.1 ได้รับการฝึกอบรมด้านอาชีพทุกคน หรือไม่"
            android:textColor="@color/colorPrimary" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radio2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ได้รับการฝึกอบรม ด้านอาชีพทุกคน (ข้ามไปข้อ 19)" />

            <RadioButton
                android:id="@+id/radio2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ไม่ได้รับการฝึกอบรม    ด้านอาชีพ....คน" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordergroup"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.3 คนในครัวเรือนที่ไม่ได้รับการฝึกอบรมด้านอาชีพ ตามข้อ 18.2 แบ่งเป็น"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/radio3_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ผู้ที่จบ ม.3 ในรอบปี    ที่ผ่านมา....คน" />

        <CheckBox
            android:id="@+id/radio3_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ผู้ที่จบ ม.3 ในปีอื่น ๆ ....คน" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/question4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bordergroup"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18.4 คนในครัวเรือนที่ไม่ได้รับการฝึกอบรมด้านอาชีพ ตามข้อ 18.2 มีความต้องการฝึกอบรมด้านอาชีพ กี่คน"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/radio4_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="......คน" />

    </LinearLayout>
</LinearLayout>