<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/txtHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/colorPrimary" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/question1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7.1 คนอายุตั้งแต่ 6 ปีขึ้นไป ทุกคนในครัวเรือนนี้ได้ออกกำลังกายอย่างน้อยสัปดาห์ละ 3 วัน ๆ ละ 30 นาที หรือ ได้ออกแรง/ออกกำลังติดต่อกันอย่างน้อย 10 นาที ขึ้นไป รวมกันทั้งวัน 30 นาที อย่างน้อยสัปดาห์ละ 5 วัน หรือไม่"
            android:textColor="@color/colorPrimary" />

        <CheckBox
            android:id="@+id/check1_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ได้ออกกำลังกาย หรือได้ออกแรง/ ออกกำลังทุกคน" />

        <CheckBox
            android:id="@+id/check1_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ได้ออกกำลังกาย ... คน" />

        <CheckBox
            android:id="@+id/check1_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ได้ออกแรง/ ออกกำลัง ... คน" />

        <CheckBox
            android:id="@+id/check1_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ไม่ได้ออกกำลังกายหรือไม่ได้ออกแรง/ไม่ได้ ... คน" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPrevious"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/custom_menubutton"
            android:fontFamily="@font/thsarabun_bold"
            android:text="ย้อนกลับ"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/custom_menubutton"
            android:fontFamily="@font/thsarabun_bold"
            android:text="ถัดไป"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>